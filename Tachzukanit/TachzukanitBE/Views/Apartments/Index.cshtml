@model IEnumerable<TachzukanitBE.Models.Apartment>

@{
    ViewData["Title"] = "Index";
}
@section Scripts
    {
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/search.css" />
}
<form asp-controller="Apartments" asp-action="Index" method="get">
    <div class="search">
        <input name="SearchString" type="text" class="search-query" placeholder="Search" autofocus />
        <button id="searchButton" class="search-button" type="submit">
            <i class="fa fa-search"></i>
        </button>
    </div>
</form>

<div>
    <a class="btn btn-success" asp-action="Create">
        <i class="fa fa-plus fa-2x"></i> Add
    </a>
    <br />
    <br />
    <br />
    <div>
        <section class="tiles">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <article class="style1">
                        <span class="image">
                            <img class="img-rounded photo-big" src="@Url.Content(item.Photo)" alt="" style="width:400px;height:200px;"/>
                        </span>
                        <a asp-action="Details" asp-route-id="@item.ApartmentId">
                            <h2>@Html.DisplayFor(modelItem => item.Address)</h2>
                            <div class="content">
                                <p>@Html.DisplayFor(modelItem => item.RoomsNumber)</p>
                            </div>
                        </a>

                    </article>
                }
            }
        </section>
    </div>
</div>
