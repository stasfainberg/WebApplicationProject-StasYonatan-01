@model TachzukanitBE.Models.Apartment

@{
    ViewData["Title"] = "Create";
}
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="~/css/main.css" />
}

<div style="float:right">
    <a class="btn btn-default" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Back
    </a>
</div>

<h2>Create Apartment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomsNumber" class="control-label"></label>
                <input asp-for="RoomsNumber" class="form-control" min="1" max="30"/>
                <span asp-validation-for="RoomsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" name="files" />
            </div>
            <br />
            <div class="form-group">
                <Button type="submit" class="btn btn-success">Create</Button>
            </div>
        </form>
    </div>
</div>

