@model IEnumerable<TachzukanitBE.Models.User>

@{
    ViewData["Title"] = "Index";
}
@section Scripts
    {
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/search.css" />
}
<form asp-controller="Users" asp-action="Index" method="get">
    <div class="search">
        <input name="Name" type="text" class="search-query" placeholder="Search Name" />
        <input name="Email" type="text" class="search-query" placeholder="Search Email" />
        <input name="Address" type="text" class="search-query" placeholder="Search Address" />
        <button id="searchButton" class="search-button" type="submit">
            <i class="fa fa-search"></i>
        </button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa fa-edit"></i>
                    </a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa fa-info"></i>
                    </a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa fa-trash-o fa-lg"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
